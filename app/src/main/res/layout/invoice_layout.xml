<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <!-- invoice status -->
        <TextView
            android:id="@+id/invoice_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E2E2E2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Paid"
            android:textColor="#28AF20"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- end invoice status -->
        <!-- invoice/client data -->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop = "3dip"
            android:paddingRight = "3dip"
            android:paddingLeft = "3dip"
            android:paddingBottom="24dip"
            android:stretchColumns="1">
            <TableRow>

                <TextView
                    android:id="@+id/invoice_id"
                    android:padding="3dp"
                    android:text="ID: 091010-4" />

                <TextView
                    android:id="@+id/invoice_date"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Date: 09/05/10" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/invoice_client"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Velocity Concepts"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/invoice_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="458 Chase Rd"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/invoice_region"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Dartmouth, MA"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/invoice_zip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="02747"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <!-- end invoice/client data -->
        <!-- invoice items -->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:stretchColumns="1">
            <!-- invoice item labels -->
            <TableRow android:background="#E2E2E2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Item"
                    android:textColor="#090909"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Cost"
                    android:textColor="#090909"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Qty"
                    android:textColor="#090909"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Total"
                    android:textColor="#090909"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </TableRow>
            <!-- end invoice item labels -->
            <!-- invoice items -->
            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Domain setup and Wordpress Installation"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="$500.00"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="$500.00"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Wordpress Theming Hours"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="$30.00"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="116"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="$7480.00"
                    android:textSize="15sp" />
            </TableRow>
            <!-- end invoice items -->

        </TableLayout>
        <!-- end invoice items -->
        <!-- invoice notes -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:text="Notes:"
            android:textColor="#E2E2E2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Installation of Wordpress, configuration, and theming. Also bought domain, and uploaded videos to youtube account." />
        <!-- end invoice notes -->
        <!-- invoice buttons -->
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <Button android:id="@+id/add_credit_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Invoice" />
                <Button android:id="@+id/add_contact_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Payments" />
            </TableRow>
        </TableLayout>
        <!-- end invoice buttons -->
    </LinearLayout>
</ScrollView>